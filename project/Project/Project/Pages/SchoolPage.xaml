<Page x:Class="Project.SchoolPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Project"
      mc:Ignorable="d"
      Title="AddressPage">
	<Grid>
		    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="32" />
            <RowDefinition />
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="SchoolSearchBox" Height="16" Margin="10,8,10,8" VerticalAlignment="Top" KeyUp="Search" />
        <DataGrid 
            x:Name="SchoolGrid"
            ItemsSource="{Binding Schools}"
            AlternatingRowBackground="DarkSalmon"
            AlternationCount="2"
            AutoGenerateColumns="False"
            ColumnWidth="*" 
            MinColumnWidth="32"
            MinWidth="512"
            Grid.Row="1">
            <DataGrid.Columns>
                <DataGridTextColumn 
                    Header="Název školy"
                    Binding="{Binding SchoolName}"
                    />
                <DataGridTextColumn 
                    Header="Kontaktní telefon"
                    Binding="{Binding ContactPhone }"
                    />
                <DataGridTextColumn 
                    Header="Kontaktní email"
                    Binding="{Binding ContactEmail}"
                    />
                <DataGridTextColumn 
                    Header="Město"
                    Binding="{Binding Address.City}"
                />
                <DataGridTextColumn 
                    Header="Ulice"
                    Binding="{Binding Address.Street}"
                />
                <DataGridTextColumn 
                    Header="Číslo popisné"
                    Binding="{Binding Address.BuildingNumber}"
                />
                <DataGridTemplateColumn
                    Header="Odstranit ">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button 
                                    Content="Odstranit"
                                    Click="Delete"/>                               
                                <Button
                                    Content="Upravit"
                                    Click="Update"/>        
                                <CheckBox
                                    Content="Export"
                                    Click="AddExport" />
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <Button 
                Margin="{Binding ButtonMargin }" 
                Content="{Binding ButtonText}"
                Click="AddAddress" />
            <Button
                Margin="{Binding ButtonMargin }"
                Content="Exportovat"
                Click="Export" />
        </StackPanel>
    </Grid>
	</Grid>
</Page>
